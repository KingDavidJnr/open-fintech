# ===============================
# üîê AUTHENTICATION
# ===============================
SECRET_KEY=your_jwt_secret_key
TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=7d

# ===============================
# üóÉÔ∏è DATABASE CONFIGURATION
# ===============================
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=openfintech_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Full URI (used by Sequelize CLI or connection pools)
DATABASE_URL=postgres://your_db_user:your_db_password@localhost:5432/openfintech_dev

# ===============================
# üí¨ APP CONFIGURATION
# ===============================
NODE_ENV=development
PORT=5000

# ===============================
# üîê ENCRYPTION KEYS
# ===============================
ENCRYPTION_KEY=your_32_byte_encryption_key_here
ENCRYPTION_IV=your_16_byte_iv_here

# ===============================
# üß† CREDIT SCORING
# ===============================
SCORING_RULES_PATH=./config/scoringRules.json

# ===============================
# ‚ö° REDIS (optional)
# ===============================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ===============================
# üìà LOGGING & MONITORING
# ===============================
LOG_LEVEL=info
ENABLE_HTTP_LOGGING=true

# ===============================
# üß™ TEST ENV VARS (for test DBs etc.)
# ===============================
TEST_DATABASE_URL=postgres://test_user:test_pass@localhost:5432/openfintech_test
